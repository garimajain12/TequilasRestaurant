@model OrderViewModel

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">My Cart</h2>

    <div class="card shadow-lg p-4">
        <form asp-action="PlaceOrder" method="post">
            <h3 class="text-secondary text-center mb-3">Order Items</h3>
            <table class="table table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.OrderItems.Count; i++)
                    {
                        <tr>
                            <td class="fw-bold">@Model.OrderItems[i].ProductName</td>
                            <td>@Model.OrderItems[i].Quantity</td>
                            <td class="text-success">@Model.OrderItems[i].Price.ToString("C")</td>
                            <td></td>
                        </tr>
                    }
                    <tr>
                        <td colspan="3" class="text-end fw-bold">Total:</td>
                        <td class="bg-primary bg-gradient text-white fw-bold">@Model.TotalAmount.ToString("C")</td>
                    </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success px-4">
                    <i class="fas fa-shopping-cart"></i> Place Order
                </button>
            </div>
        </form>
    </div>
</div>
