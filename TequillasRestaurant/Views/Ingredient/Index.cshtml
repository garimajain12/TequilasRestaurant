@model IEnumerable<Ingredient>
	@{
		ViewBag.Title = "List of Resturant Ingredients";
	}

<h1 class="mb-3 text-primary fw-bold">Ingredients</h1>
<a asp-action="Create" class="btn btn-success btn-lg shadow-sm mb-4">
	<i class="fas fa-plus"></i> Create New Ingredient
</a>

<table class="table table-striped table-hover table-bordered text-center">
	<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th></th>
			</tr>
	</thead>
	<tbody>
		@foreach(Ingredient i in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => i.Name)
				</td>
				<td>
					<a asp-action="Details" asp-route-id="@i.IngredientId" class="btn btn-info me-3">Details</a>
					<a asp-action="Edit" asp-route-id="@i.IngredientId" class="btn btn-success me-3">Edit</a>
					<a asp-action="Delete" asp-route-id="@i.IngredientId" class="btn btn-danger me-3">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>