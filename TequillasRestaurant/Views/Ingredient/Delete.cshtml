@model Ingredient
@{
    ViewBag.Title = $"Delete {Model.Name} Ingredient";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4 text-center">
        <h2 class="text-danger mb-4">Are you sure you want to delete this?</h2>
        <h4 class="text-secondary mb-3">@Model.Name</h4>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="IngredientId" />
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-danger px-4 me-3">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-primary px-4">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>
