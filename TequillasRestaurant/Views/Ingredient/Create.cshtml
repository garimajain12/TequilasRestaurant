@model Ingredient
@{
    ViewBag.Title = "Create Ingredient";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">@ViewBag.Title</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <form asp-action="Create" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter ingredient name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-3">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="fas fa-plus"></i> Create
                        </button>
                        <a asp-action="Index" class="btn btn-outline-primary px-4">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
