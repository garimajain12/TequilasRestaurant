@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    <h1 class="display-4 text-primary font-weight-bold">Welcome to TequilasRestaurant!</h1>
    <p class="lead text-muted mt-2">Indulge in the finest dining experience with the best quality food.</p>

    <!-- Add the Image -->
    <img src="~/images/food1.jpg" alt="Delicious Food" class="img-fluid mt-2" style="max-width: 43%; border-radius: 8px;">

    <p class="text-success font-weight-bold mt-4" style="font-size: 1.5rem;">We serve only the best quality food to satisfy your taste buds!</p>
</div>

<style>
    .text-center {
        background-color: #f8f9fa;
        padding: 50px 0;
        border-radius: 10px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
    }

    .display-4 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: 700;
    }

    .lead {
        font-size: 1.2rem;
    }

    .img-fluid {
        max-width: 100%;
        height: auto;
    }
</style>
